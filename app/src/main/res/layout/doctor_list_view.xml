<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:layout_margin="7dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:background="#8870b0f9"
        android:padding="10dp"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.pkmmte.view.CircularImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageViewDoctorPic"
                        android:src="@drawable/ic_account_circle_white_24dp"
                        app:border="true"
                        app:border_color="#EEEEEE"
                        app:border_width="2dp"
                        app:shadow="true"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_thumb_up_black_18dp"
                            android:id="@+id/imageView4"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="1.2dp"
                            android:layout_weight="0.21"/>

                        <TextView
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewDoctorLikes"
                            android:layout_marginTop="3dp"
                            android:layout_weight="0.19" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            //hospital name
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:text=" "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewHospitalName"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/red_pressed" />

            </LinearLayout>

            //doctor name
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:text="  Dr. Pravin Kumbhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctorid"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:textColor="@color/black" />
                <TextView
                    android:text="  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctorName"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:text="  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewDoctorDegree"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_room_black_18dp"
                        android:id="@+id/imageViewdoctorhospitallocation"
                        />
                    <TextView
                        android:text=" "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewNearbycity"

                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="Available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctoAvaliablity"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="0.29"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctoAvaliablitydays"
                    android:layout_weight="2.33"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_alarm_black_18dp"
                    android:id="@+id/imageViewtime"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctoAvaliabletime"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2.82"/>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_rate_black_18dp"
                        android:id="@+id/imageViewexp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewDoctorexp"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:text=" yrs of exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewtextexp"
                            android:layout_marginTop="2dp"
                            android:textSize="11dp"
                            />

                    </LinearLayout>

                    //view
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_visibility_black_18dp"
                            android:id="@+id/imageViewdoctorview"
                            />

                        <TextView
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdoctorview"
                            android:layout_marginTop="2dp"
                            />
                    </LinearLayout>

                    //review
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_rate_black_18dp"
                        android:id="@+id/imageViewdoctorreview"
                        android:layout_marginLeft="5dp"
                       android:layout_gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        >

                        <TextView
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdoctorreview"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:text=" reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewtextdoctorreview"
                            android:layout_marginTop="2dp"
                            android:textSize="11dp"
                            />
                    </LinearLayout>
                    //distance
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_rate_black_18dp"
                        android:id="@+id/imageViewdoctorhospiptaldist"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
                    <LinearLayout
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        >

                        <TextView
                            android:text="~"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdoctorhospitaldist"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:text=" "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdoctorhospitaldistancevalue"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:text="km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewdoctorhospitaldistancevaluekm"
                            android:layout_marginTop="2dp"
                            android:textSize="11dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Book"
                        android:textStyle="bold"

                        android:id="@+id/doctorBookAppointment"
                        android:layout_gravity="top"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
